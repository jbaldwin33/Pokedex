<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net6.0-windows</TargetFramework>
    <UseWPF>true</UseWPF>
    <RootNamespace>Pokedex.PokedexApp</RootNamespace>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <BaseOutputPath>bin\</BaseOutputPath>
    <PlatformTarget>AnyCPU</PlatformTarget>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.EntityFrameworkCore" Version="6.0.1" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="MVVMFramework">
      <HintPath>..\assemblies\MVVMFramework.dll</HintPath>
    </Reference>
    <Reference Include="PkdxDatabase">
      <HintPath>..\assemblies\PkdxDatabase.dll</HintPath>
    </Reference>
    <Reference Include="PokedexLib">
      <HintPath>..\assemblies\PokedexLib.dll</HintPath>
    </Reference>
  </ItemGroup>

</Project>